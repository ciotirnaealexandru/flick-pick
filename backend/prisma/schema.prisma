generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum watchStatus {
  // the user did not put the show on the list
  NOT_WATCHED
  // the user put the show on the list but did not watch it yet
  WILL_WATCH
  // the user put the show on the list and watched it
  WATCHED
}

model User {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  email     String  @unique
  phone     String?
  password  String

  shows UserShow[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserShow {
  // default info from the show API
  id       Int    @id @default(autoincrement())
  apiId    Int
  name     String
  summary  String
  imageUrl String

  // info that the user provided about the show 
  user          User        @relation(fields: [userId], references: [id])
  userId        Int
  userRating    Int?
  userReview    String?
  watchedStatus watchStatus @default(NOT_WATCHED)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
